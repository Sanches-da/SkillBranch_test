<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_character"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.skill_branch.test.ui.activities.CharacterActivity"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        >

        <ImageView
            android:id="@+id/char_image"
            android:layout_height="match_parent"
            android:src="@drawable/stark"
            android:fitsSystemWindows="true"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/char_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            android:textSize="48sp"
            android:text="John Doe"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="48dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="8dp"
        android:background="@color/color_gray_light"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription=""/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="108dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="Words:"
                android:layout_gravity="top"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/char_words"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/color_gray"
                android:text="Si vis"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription=""/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="108dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="Born:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/char_born"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/color_gray"
                android:text="812 AC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription=""/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="108dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="Titles:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/char_titles"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/color_gray"
                android:text="Si vis"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription=""/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="108dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="Aliases:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/char_aliases"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/color_gray"
                android:text="Si vis
                dfdfdfd
                fdfdf"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="108dp"
                android:layout_marginLeft="24dp"
                android:paddingLeft="16dp"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="Father:"
                android:paddingTop="4dp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/char_father"
                android:layout_height="24dp"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/color_white"
                android:background="@color/color_red"
                android:text="FATHER"
                android:onClick="clickFather (CharacterActivity)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="108dp"
                android:layout_marginLeft="24dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:layout_gravity="top"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="Mother:"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/char_mother"
                android:layout_height="24dp"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/color_white"
                android:background="@color/color_red"
                android:text="MOTHER"
                android:onClick="clickMother (CharacterActivity)"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
